{
  "name": "react-stream-renderer",
  "version": "0.0.0",
  "description": "",
  "license": "MIT",
  "repository": "github:zamotany/react-stream-renderer",
  "author": {
    "name": "Paweł Trysła",
    "email": "pawel.trysla@gmail.com"
  },
  "files": [
    "build",
    "scripts"
  ],
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "build": "babel src --out-dir build --ignore **/__tests__/**",
    "build:clean": "rimraf build",
    "build:watch": "yarn run build --watch",
    "prepublish": "yarn run build",
    "postinstall": "node ./scripts/export-reconciler.js && yarn run bootstrap:example",
    "bootstrap:example": "yarn link && cd example && yarn && cd ..",
    "flow": "flow",
    "lint": "eslint .",
    "test": "jest",
    "format": "prettier --single-quote --trailing-comma all --write \"src/**/*.js\""
  },
  "dependencies": {
    "chalk": "^2.3.0",
    "cli-spinners": "^1.1.0",
    "fast-memoize": "^2.2.8",
    "fbjs": "^0.8.16",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "16.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-plugin-flow-react-proptypes": "^7.0.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "cross-env": "^5.1.1",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "eslint": "^4.10.0",
    "eslint-config-callstack-io": "^1.0.1",
    "flow-bin": "^0.57.3",
    "jest": "^21.2.1",
    "np": "^2.16.1",
    "prettier": "^1.7.4",
    "rimraf": "^2.6.2"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 6
          }
        }
      ],
      "react",
      "stage-2"
    ],
    "plugins": [
      "flow-react-proptypes",
      "transform-flow-strip-types",
      "transform-object-rest-spread"
    ],
    "sourceMaps": "inline"
  },
  "eslintConfig": {
    "extends": "callstack-io"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/__setup__/react.js",
      "<rootDir>/__setup__/enzyme.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/build",
      "<rootDir>/example"
    ]
  }
}

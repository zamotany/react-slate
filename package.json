{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run --parallel build",
    "watch": "lerna run --parallel build:watch",
    "prepare": "yarn build",
    "flow": "flow",
    "lint": "lerna exec ../../node_modules/.bin/eslint .",
    "test": "jest",
    "format": "prettier --single-quote --trailing-comma all --write \"packages/*/src/**/*.js\""
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-flow-react-proptypes": "^6.1.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "concurrently": "^3.5.1",
    "cross-env": "^5.1.1",
    "eslint": "^4.18.2",
    "eslint-config-callstack-io": "^1.1.1",
    "flow-bin": "^0.54.1",
    "jest": "^22.4.2",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/.+/build",
      "<rootDir>/example"
    ],
    "snapshotSerializers": [
      "<rootDir>/jestSnapshotSerializer.js"
    ]
  },
  "dependencies": {
    "lerna": "^2.9.0"
  }
}
